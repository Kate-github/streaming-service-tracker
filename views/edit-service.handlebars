
<h2>
    Edit Service
</h2>
<form class="edit-service">
    <div>
        <label for="service-name">Service Name</label>
        <input type="text" id="service-name" value="{{service.name}}" />
    </div>
    <div>
        <label for="service-cost">Cost</label>
        <input type="text" id="service-cost" value="{{service.cost}}" />
    </div>
    <div>
        <label for="service-recurrence">How often does this subscription get renewed?</label>
        <input list="recurrence" id="service-recurrence" value="{{service.cost_basis}}" />
        <datalist id="recurrence">
            <option value="monthly">
            <option value="yearly">
        </datalist>
    </div>
    <div>
        <label for="service-renewal-date">Auto Renewal Date</label>
        <input type="text" id="service-renewal-date" value="{{service.auto_renewal_date}}" />
    </div>
    <div>
        {{!-- TODO: pass in whether this is specified and check the radio box --}}
        <p>Is this service active?</p>
        <label for="active">Yes</label>
        <input type="radio" id="active" name="is-service-active" value="true" />
        <label for="inactive">No</label>
        <input type="radio" id="inactive" name="is-service-active" value="false" />

    </div>
    <div>
        <button type="submit">submit</button>
    </div>
</form>

<script src="/javascript/edit-service.js"></script>